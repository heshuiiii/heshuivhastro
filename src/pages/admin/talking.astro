        // ä¿®å¤çš„ç¼–ç å‡½æ•°
        function stringToBase64(str) {
            // ä½¿ç”¨ TextEncoder æ¥æ­£ç¡®å¤„ç† UTF-8 ç¼–ç 
            const encoder = new TextEncoder();
            const bytes = encoder.encode(str);
            let binary = '';
            for (let i = 0; i < bytes.length; i++) {
                binary += String.fromCharCode(bytes[i]);
            }
            return btoa(binary);
        }

        // ä¿®å¤çš„è§£ç å‡½æ•°
        function base64ToString(base64) {
            try {
                const binary = atob(base64);
                const bytes = new Uint8Array(binary.length);
                for (let i = 0; i < binary.length; i++) {
                    bytes[i] = binary.charCodeAt(i);
                }
                const decoder = new TextDecoder('utf-8');
                return decoder.decode(bytes);
            } catch (error) {
                // å¦‚æœè§£ç å¤±è´¥ï¼Œå¯èƒ½æ˜¯æ—§çš„ç¼–ç æ ¼å¼ï¼Œå°è¯•ç›´æ¥è§£ç 
                console.warn('Base64 decode failed, trying fallback:', error);
                return atob(base64);
            }
        }
        
        async function updateTalkingFile(newItem, config) {
            try {
                // 1. è·å–å½“å‰æ–‡ä»¶å†…å®¹
                const getResponse = await fetch(`https://api.github.com/repos/${config.repoPath}/contents/${config.filePath}`, {
                    headers: {
                        'Authorization': `token ${config.githubToken}`,
                        'Accept': 'application/vnd.github.v3+json'
                    }
                });
                
                if (!getResponse.ok) {
                    throw new Error('æ— æ³•è·å–æ–‡ä»¶å†…å®¹');
                }
                
                const fileData = await getResponse.json();
                // ä½¿ç”¨ä¿®å¤çš„è§£ç å‡½æ•°
                const currentContent = base64ToString(fileData.content);
                
                // 2. è§£æå½“å‰å†…å®¹å¹¶æ·»åŠ æ–°é¡¹
                const dataMatch = currentContent.match(/data:\s*\[([\s\S]*?)\n\s*\]/);
                if (!dataMatch) {
                    throw new Error('æ— æ³•è§£ææ–‡ä»¶æ ¼å¼');
                }
                
                // ç”Ÿæˆæ–°çš„æ¡ç›®ï¼Œä¿æŒå’Œä½ åŸæœ‰æ ¼å¼ä¸€è‡´
                const newItemStr = `    {
      "date": "${newItem.date}",
      "tags": ${JSON.stringify(newItem.tags, null, 8).replace(/\n/g, '\n      ')},
      "content": ${JSON.stringify(newItem.content)}
    }`;
                
                let newContent;
                if (dataMatch[1].trim() === '') {
                    // ç©ºæ•°ç»„
                    newContent = currentContent.replace(
                        /data:\s*\[\s*\]/,
                        `data: [\n${newItemStr}\n  ]`
                    );
                } else {
                    // æœ‰æ•°æ®ï¼Œæ·»åŠ åˆ°å¼€å¤´ï¼ˆæœ€æ–°çš„åœ¨æœ€å‰é¢ï¼‰
                    newContent = currentContent.replace(
                        /data:\s*\[/,
                        `data: [\n${newItemStr},`
                    );
                }
                
                // 3. æäº¤æ›´æ–° - ä½¿ç”¨ä¿®å¤çš„ç¼–ç å‡½æ•°
                const updateResponse = await fetch(`https://api.github.com/repos/${config.repoPath}/contents/${config.filePath}`, {
                    method: 'PUT',
                    headers: {
                        'Authorization': `token ${config.githubToken}`,
                        'Accept': 'application/vnd.github.v3+json',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        message: `Add new talking: ${newItem.content.replace(/<[^>]*>/g, '').substring(0, 30)}...`,
                        content: stringToBase64(newContent), // ä½¿ç”¨ä¿®å¤çš„ç¼–ç å‡½æ•°
                        sha: fileData.sha,
                        branch: 'main' // æ”¹ä¸ºä½ çš„é»˜è®¤åˆ†æ”¯ï¼Œå¦‚æœæ˜¯ 'master' è¯·ä¿®æ”¹
                    })
                });
                
                if (!updateResponse.ok) {
                    const errorData = await updateResponse.json();
                    throw new Error(errorData.message || 'æäº¤å¤±è´¥');
                }
                
                return await updateResponse.json();
            } catch (error) {
                console.error('Error:', error);
                throw error;
            }
        }
        
